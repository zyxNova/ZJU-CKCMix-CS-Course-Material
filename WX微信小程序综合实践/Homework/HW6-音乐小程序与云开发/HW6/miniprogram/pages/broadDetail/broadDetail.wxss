/* pages/broadDetail/broadDetail.wxss */
page {
    height: 100%;
}

.music-detail {
    padding-bottom: 110rpx;
}

.detail-banner {
    width: 100%;
    height: 500rpx;
    line-height: 500rpx;
    position: fixed;
    top: 0;
    z-index: -1;
}

.detail-banner image {
    width: 100%;
    height: 500rpx;
}

.detail-banner::after{
    border-radius: 5px;
    position: absolute;
    top:0;
    left:0;
    content:'';
    width:100%;
    height:100%;
    background-color: rgba(0,0,0,.5);
    z-index: 0;
}


.detail-wrap {
    padding-top: 500rpx;
}