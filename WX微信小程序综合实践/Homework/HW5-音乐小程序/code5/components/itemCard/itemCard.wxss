.author {
    font-weight: bold;
    font-size: 40rpx;
    margin :15rpx 15rpx;
    background-color: #f5f5f5;
    border-radius: 5px;
    padding-left: 10px;
}

.profile {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 250rpx;
    height: 250rpx;
    margin-left: auto;
    
}

.banner {
    width: 220rpx;
    height: 220rpx;
}

.content {
    margin :15rpx 15rpx;
    display: flex;
    /* flex-direction: column; */

    background-color: #f5f5f5;
    border-radius: 5px;
}

.song {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 15rpx;
    font-size: 38rpx;
}